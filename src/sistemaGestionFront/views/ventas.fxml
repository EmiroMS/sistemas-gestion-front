<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sistemaGestionFront.controllers.VentaController">

    <!-- ================= TOP ================= -->
    <top>
        <VBox spacing="12" style="-fx-padding: 15;">

            <Label text="Registro de Venta"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <HBox spacing="10" alignment="CENTER_LEFT">

                <ComboBox fx:id="comboProductos"
                          promptText="Seleccione producto"
                          prefWidth="250"/>

                <TextField fx:id="txtCantidad"
                           promptText="Cantidad"
                           prefWidth="120"/>

                <Button text="Agregar"
                        onAction="#agregarProducto"
                        style="-fx-background-color:#2980b9;
                               -fx-text-fill:white;" />

            </HBox>

        </VBox>
    </top>


    <!-- ================= TABLE ================= -->
    <center>
        <!-- âœ… QUITAMOS columnResizePolicy -->
        <TableView fx:id="tablaVenta"
                   editable="true">

            <columns>

                <TableColumn text="Producto"
                             fx:id="colProducto"/>

                <TableColumn text="Cantidad"
                             fx:id="colCantidad"/>

                <TableColumn text="Precio Unitario"
                             fx:id="colPrecio"/>

                <TableColumn text="Total"
                             fx:id="colTotal"/>

                <TableColumn text="Acciones"
                             fx:id="colAcciones"/>

            </columns>

        </TableView>
    </center>


    <!-- ================= FOOTER ================= -->
    <bottom>
        <HBox spacing="20"
              alignment="CENTER_RIGHT"
              style="-fx-padding: 15;
                     -fx-background-color:#ecf0f1;">

            <Label text="TOTAL:"
                   style="-fx-font-size:18px;
                          -fx-font-weight:bold;" />

            <Label fx:id="lblTotal"
                   text="0.0"
                   style="-fx-font-size:22px;
                          -fx-text-fill:#27ae60;
                          -fx-font-weight:bold;" />

            <Button text="Confirmar Venta"
                    onAction="#confirmarVenta"
                    style="-fx-background-color:#27ae60;
                           -fx-text-fill:white;
                           -fx-font-weight:bold;
                           -fx-padding:8 20;" />

        </HBox>
    </bottom>

</BorderPane>